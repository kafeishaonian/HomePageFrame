<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rg_tabs"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tab_homepage"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:button="@null"
            android:clickable="true"
            android:drawablePadding="-2dp"
            android:drawableTop="@drawable/bg_tab_homepage"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="首页"
            android:textColor="@drawable/bg_footbar_textcolor"
            android:textSize="10sp"/>

        <RadioButton
            android:id="@+id/tab_trade"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:button="@null"
            android:clickable="true"
            android:drawablePadding="-2dp"
            android:drawableTop="@drawable/bg_tab_trade"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="交易"
            android:textColor="@drawable/bg_footbar_textcolor"
            android:textSize="10sp"/>

        <RadioButton
            android:id="@+id/tab_watch"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:button="@null"
            android:clickable="true"
            android:drawablePadding="-2dp"
            android:drawableTop="@drawable/bg_tab_tomlive"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="投资圈"
            android:textColor="@drawable/bg_footbar_textcolor"
            android:textSize="10sp"/>

        <RadioButton
            android:id="@+id/tab_mine"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:button="@null"
            android:clickable="true"
            android:drawablePadding="-2dp"
            android:drawableTop="@drawable/bg_tab_mine"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="我的"
            android:textColor="@drawable/bg_footbar_textcolor"
            android:textSize="10sp"/>
    </RadioGroup>
    <View
        android:layout_alignTop="@+id/rg_tabs"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#e5e5e5"/>

</RelativeLayout>
